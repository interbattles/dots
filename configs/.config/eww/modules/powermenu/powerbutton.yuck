(defwidget powerbutton [icon text action]
  (button :onclick {action}
    (box 
      :orientation "v"
      :space-evenly false
      (image 
        :icon {icon}
        :icon-size "dialog"
        :vexpand true
        :valign "center")

      (label 
        :text {text}
        :vexpand false
        :valign "end"))))
