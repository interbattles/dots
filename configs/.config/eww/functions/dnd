# vi: ft=fish

switch $argv[1]
    case listen
        while true
            dunstctl is-paused || exit 1
            sleep 1
        end
    case set
        dunstctl set-paused $argv[2] || exit 1
        eww update dnd=(dunstctl is-paused)
        eww close quicksettings
    case '*'
        exit 1
end

# vi: tabstop=4 shiftwidth=4
