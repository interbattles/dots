layout {
  default_tab_template {
    children
    pane size=1 borderless=true {
      plugin location="https://github.com/dj95/zjstatus/releases/latest/download/zjstatus.wasm" {
        format_left   "{mode} #[fg=#81d5cc,bold]{session}"
        format_center "{tabs}"
        format_right  "{command_git_branch} {datetime}"
        format_space  ""

        border_enabled  "false"
        border_char   "â”€"
        border_format   "#[fg=#899391]{char}"
        border_position "top"

        hide_frame_for_single_pane "true"

        mode_normal  "#[bg=#81d5cc] "
        mode_tmux  "#[bg=#b1ccc8] "

        tab_normal   "#[fg=#dde4e2] {name} "
        tab_active   "#[fg=#bec9c6,bold,italic] {name} "

        command_git_branch_command   "git rev-parse --abbrev-ref HEAD"
        command_git_branch_format    "#[fg=#81d5cc] {stdout} "
        command_git_branch_interval  "10"
        command_git_branch_rendermode  "static"

        datetime    "#[fg=#dde4e2,bold] {format} "
        datetime_format "%A, %d %b %Y %H:%M"
        datetime_timezone "Europe/Berlin"
      }
    }
  }
}
